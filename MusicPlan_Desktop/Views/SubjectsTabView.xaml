<UserControl x:Class="MusicPlan_Desktop.Views.SubjectsTabView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:resources="clr-namespace:MusicPlan_Desktop.Resources"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity">

    <Grid Background="#FFE5E5E5">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>

        <GroupBox Margin="50 20 50 20" Header="{x:Static resources:ApplicationResources.SubjectsList}" Grid.Row="1">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <DataGrid  Height="500"
                            SelectedIndex="{Binding SelectedItemIndex}"
                            ItemsSource="{Binding ItemsList}"
                            SelectionMode="Single" 
                            Margin="5 10 5 10"
                            Name="DgInstruments" 
                            AutoGenerateColumns="False" 
                            IsReadOnly="False" CanUserResizeColumns="True" CanUserAddRows="False" CanUserSortColumns="True"
                           RowDetailsVisibilityMode="VisibleWhenSelected">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="SelectionChanged">
                            <i:InvokeCommandAction
                                Command="{Binding DataContext.SelectItemCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGrid}}}"
                                CommandParameter="{Binding SelectedItem, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGrid}}}" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>

                    <DataGrid.RowDetailsTemplate>
                        <DataTemplate>
                            <GroupBox HorizontalAlignment="Left" Margin="10" Width="220" Header="{x:Static resources:ApplicationResources.Schedules}">
                                <DataGrid
                                    SelectionMode="Single" 
                                    AutoGenerateColumns="False" 
                                    IsReadOnly="False" CanUserResizeColumns="True" CanUserAddRows="False" CanUserSortColumns="True"
                                    Margin="10" 
                                    ItemsSource="{Binding HoursParameters}"
                                    SelectedIndex="{Binding SelectedSubItemIndex}">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn IsReadOnly="True" Header="{x:Static resources:ApplicationResources.FirstSemesterWeeksCount}" Binding="{Binding WeeksPerFirstSemester}" />
                                        <DataGridTextColumn IsReadOnly="True" Header="{x:Static resources:ApplicationResources.FirstSemesterHoursPerWeekCount}" Binding="{Binding HoursPerFirstSemester}" />
                                        <DataGridTextColumn IsReadOnly="True" Header="{x:Static resources:ApplicationResources.SecondSemesterWeeksCount}" Binding="{Binding WeeksPerSecondSemester}" />
                                        <DataGridTextColumn IsReadOnly="True" Header="{x:Static resources:ApplicationResources.SecondSemesterHoursPerWeekCount}" Binding="{Binding HoursPerSecondSemester}" />
                                        <DataGridTemplateColumn Header="{x:Static resources:ApplicationResources.Delete}">
                                            <DataGridTemplateColumn.CellTemplate >
                                                <DataTemplate>
                                                    <Button  Margin="3" Padding="3" Content="{x:Static resources:ApplicationResources.Delete}">
                                                        <i:Interaction.Triggers>
                                                            <i:EventTrigger EventName="Click">
                                                                <i:InvokeCommandAction 
                                                Command="{Binding Path=DataContext.DeleteSubItemCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type UserControl}, AncestorLevel=1}}"
                                                CommandParameter="{Binding SelectedItem, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGrid}}}" />
                                                            </i:EventTrigger>
                                                        </i:Interaction.Triggers>
                                                    </Button>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                    </DataGrid.Columns>

                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="SelectionChanged">
                                            <i:InvokeCommandAction
                                                Command="{Binding DataContext.SelectSubItemCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGrid}, AncestorLevel=1}}"
                                                CommandParameter="{Binding SelectedItem, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGrid}}}" />
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                </DataGrid>
                            </GroupBox>
                        </DataTemplate>
                    </DataGrid.RowDetailsTemplate>


                    <DataGrid.Columns>
                        <DataGridTextColumn IsReadOnly="True" Header="{x:Static resources:ApplicationResources.Number}" Binding="{Binding Id}" />
                        <DataGridTextColumn IsReadOnly="True" Width="*" Header="{x:Static resources:ApplicationResources.Instrument}" Binding="{Binding Name}" />
                        <DataGridTemplateColumn Header="{x:Static resources:ApplicationResources.Delete}">
                            <DataGridTemplateColumn.CellTemplate >
                                <DataTemplate>
                                    <Button  Margin="5" Padding="5" Content="{x:Static resources:ApplicationResources.Delete}">
                                        <i:Interaction.Triggers>
                                            <i:EventTrigger EventName="Click">
                                                <i:InvokeCommandAction 
                                                Command="{Binding Path=DataContext.DeleteItemCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type UserControl}}}"
                                                CommandParameter="{Binding SelectedItem, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGrid}}}" />
                                            </i:EventTrigger>
                                        </i:Interaction.Triggers>
                                    </Button>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>


                </DataGrid>

            </ScrollViewer>


        </GroupBox>

        <GroupBox Grid.Row="0" 
                  Header="{x:Static resources:ApplicationResources.EditInsertSubject}" 
                  HorizontalAlignment="Center" 
                  Margin="0,10,0,0" 
                  Padding="10" 
                  VerticalAlignment="Top" 
                  Width="Auto" 
                  Height="Auto" >
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition Height="auto"></RowDefinition>
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="0">
                    <Label Content="{x:Static resources:ApplicationResources.Name}" HorizontalAlignment="Left" Margin="15 0 0 0" VerticalAlignment="Top"  Target="{Binding ElementName=TxtInstrumentName}"/>
                    <TextBox Text="{Binding SelectedItem.Name}" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="220" Margin="15,0,0,0" x:Name="TxtInstrumentName" />
                </StackPanel>
                <GroupBox Margin="10" Grid.Row="1" Header="{x:Static resources:ApplicationResources.Schedule}">

                    <StackPanel Orientation="Horizontal" Margin="10">
                        <StackPanel Orientation="Vertical">
                            <StackPanel Margin="10 0 5 10" Orientation="Horizontal">
                                <Label Content="{x:Static resources:ApplicationResources.FirstSemesterWeeksCount}"/>
                                <TextBox Text="{Binding SelectedSubItem.WeeksPerFirstSemester}" HorizontalAlignment="Left" Height="23" VerticalAlignment="Top" Width="100" Margin="0"></TextBox>
                            </StackPanel>
                            <StackPanel Margin="10 0 5 10" Orientation="Horizontal">
                                <Label Content="{x:Static resources:ApplicationResources.SecondSemesterWeeksCount}"/>
                                <TextBox Text="{Binding SelectedSubItem.WeeksPerSecondSemester}" HorizontalAlignment="Left" Height="23" VerticalAlignment="Top" Width="100" Margin="0"></TextBox>
                            </StackPanel>
                        </StackPanel>
                        <StackPanel Orientation="Vertical">
                            <StackPanel Margin="10 0 5 10" Orientation="Horizontal">
                                <Label Content="{x:Static resources:ApplicationResources.FirstSemesterHoursPerWeekCount}"/>
                                <TextBox Text="{Binding SelectedSubItem.HoursPerFirstSemester}" HorizontalAlignment="Left" Height="23" VerticalAlignment="Top" Width="100" Margin="0"></TextBox>
                            </StackPanel>
                            <StackPanel Margin="10 0 5 10" Orientation="Horizontal">
                                <Label Content="{x:Static resources:ApplicationResources.SecondSemesterHoursPerWeekCount}"/>
                                <TextBox Text="{Binding SelectedSubItem.HoursPerSecondSemester}" HorizontalAlignment="Left" Height="23" VerticalAlignment="Top" Width="100" Margin="0"></TextBox>
                            </StackPanel>
                        </StackPanel>
                        <StackPanel Orientation="Vertical">
                            <StackPanel Orientation="Horizontal" Margin="10 0 5 10">
                                <Label Content="{x:Static resources:ApplicationResources.ParametersType}"/>
                                <ComboBox
                            HorizontalAlignment="Left" Height="23" VerticalAlignment="Top" Width="220" Margin="0" 
                            IsEditable="False" IsReadOnly="True" 
                            ItemsSource="{Binding SubjectParameterTypes}"
                            SelectedItem="{Binding SelectedSubItem.Type}">
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Name}" />
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </ComboBox>
                            </StackPanel>
                            <StackPanel HorizontalAlignment="Right" Margin="10 0 5 10" Orientation="Horizontal">
                                <Label Content="{x:Static resources:ApplicationResources.StudyYear}"/>
                                <ComboBox
                                    HorizontalAlignment="Right" Height="23" VerticalAlignment="Top" Width="220" Margin="0" 
                                    IsEditable="False" IsReadOnly="True" 
                                    ItemsSource="{Binding Path=Classes}"
                                    SelectedItem="{Binding SelectedSubItem.StudyYear}">
                                </ComboBox>
                            </StackPanel>
                        </StackPanel>

                    </StackPanel>
                </GroupBox>

                <Button 
                    Grid.Row="3" 
                    Name="BtnAddInstrument" 
                    HorizontalAlignment="Left" VerticalAlignment="Top" Width="auto" Margin="50 0 0 0" Padding="5"
                    Content="{Binding BtnAddButtonContent}" 
                    Command="{Binding AddUpdateCommand}"
                    CommandParameter="{Binding SelectedItem}"/>
                <Button Grid.Row="3" 
                        Command="{Binding CancelSelectionCommand}"
                        Name="BtnCancelInsertInstrument" 
                        Content="{x:Static resources:ApplicationResources.Cancel}" 
                        HorizontalAlignment="Right" VerticalAlignment="Top" Padding="5" Margin="0 0 50 0" />
            </Grid>
        </GroupBox>
    </Grid>
</UserControl>
